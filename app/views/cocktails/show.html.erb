<% content_for :nav, render('components/navbar-show') %>

<div class="cocktail-show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>')">
  <h1 class="text-center"><%= @cocktail.name %></h1>
</div>

<div class="container-show">
  <div class="show-section">
    <h3>Ingredients:</h3>
    <ul>
      <%  @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to dose_path(dose),
                      method: :delete,
                      data: {confirm: "Are you sure?"} do %>
                      <i class="far fa-trash-alt"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="show-section">    <h3>Reviews:</h3>
      <%  @cocktail.reviews.each do |review| %>
        <div>
          <p>Name: <%= review.name %> </p>
          <p>Rating: <%= review.rating %> </p>
          <p> <%= review.content %> </p>
        </div>
      <% end %>
  </div>

  <hr>
  <%= link_to "Go back", cocktails_path, class: "btn btn-dark" %> |
  <%= link_to "Add ingredients",  new_cocktail_dose_path(@cocktail), class: "btn btn-dark" %> |
  <%= link_to "Add a review", new_cocktail_review_path(@cocktail), class: "btn btn-dark" %>

</div>
