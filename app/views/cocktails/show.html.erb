<% content_for :nav, render('components/navbar-show') %>

<div class="cocktail-show-background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>')">
  <h1 class="text-center"><%= @cocktail.name %></h1>
</div>

<div class="container-show">
  <h3>Ingredients:</h3>
  <ul>
    <%  @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to dose_path(dose),
                    method: :delete,
                    data: {confirm: "Are you sure?"} do %>
                    <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <hr>
  <%= link_to "Go back", cocktails_path %> |
  <%= link_to "Add ingredients",  new_cocktail_dose_path(@cocktail)%>

</div>
