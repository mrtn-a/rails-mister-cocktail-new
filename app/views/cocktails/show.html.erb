<% content_for :nav, render('components/navbar-show') %>

<div class="cocktail-show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>')">
  <h1 class="text-center"><%= @cocktail.name %></h1>
</div>


<div class="container-show">
  <div class="row">
    <div class="show-section col-12 col-lg-8 mt-4">
      <h3>Ingredients:</h3>
      <ul>
        <%  @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %>
            <%= dose.ingredient.name %>
            <%= link_to dose_path(dose),
                        method: :delete,
                        data: {confirm: "Are you sure?"} do %>
                        <i class="far fa-trash-alt"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="show-section col-12 col-lg-4 mt-4">
      <h3>Add a new ingredient:</h3>
      <%= render 'doses/form' %>
    </div>
  </div>

    <div class="show-section col-12 col-lg-8">
      <h3>Reviews:</h3>

      <% if @cocktail.reviews.empty? %>
        <p>There are no reviews for this cocktail yet.</p>
      <% end %>

        <%  @cocktail.reviews.each do |review| %>
          <div class="card-review">
            <p class="p-1"> <%= review.name %> | Rating: <%= review.rating %></p>
            <p class="p-1"> <%= review.content %> </p>
          </div>
        <% end %>
    </div>

  <hr>
  <%= link_to "Go back", cocktails_path, class: "btn btn-dark" %> |
  <%= link_to "Add ingredients",  new_cocktail_dose_path(@cocktail), class: "btn btn-dark" %> |
  <%= link_to "Add a review", new_cocktail_review_path(@cocktail), class: "btn btn-dark" %>
</div>
