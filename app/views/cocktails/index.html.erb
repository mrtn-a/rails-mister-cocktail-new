<% content_for :nav, render('components/navbar-main') %>

<div class="home-banner" style="background-image: url('https://images.unsplash.com/photo-1517620114540-4f6a4c43f8ed?ixlib=rb-1.2.1&w=1050');">
  <h1><i class="fas fa-cocktail"></i> cocktail kit</h1>
  <p>
    <span id="banner-typed-text"></span>
  </p>
</div>


<div class="container">
  <h2>all cocktails</h2>

  <div class="d-flex justify-content-center mb-4">


    <%= button_tag type: 'submit', class: "btn-search" do %>
      <i class="fas fa-search"></i>
    <% end %>
    <%= form_tag(cocktails_path, method: :get, class: 'form-inline') do %>
    <div class="form-group">
      <%= text_field_tag :query, "", placeholder: "I'm searching for...", class: 'form-control' %>
    </div>


  <% end %>
  </div>


  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <div class="cocktail-card">
            <div class="cocktail-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, crop: :fill %>')">
            <div class="cocktail-card-text d-flex flex-column align-items-center justify-content-center" style="height: 280px;">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


