  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-lg-4">
        <div class="cocktail-card">
          <%= link_to cocktail_path(cocktail) do %>
            <div class="cocktail-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, crop: :fill %>')">
              <div class="cocktail-card-text d-flex flex-column align-items-center justify-content-center text-center" style="height: 280px;">
                <%= cocktail.name %>
              </div>
            </div>
          <% end  %>
        </div>
      </div>
    <% end %>
  </div>
